@page
@model Notes.Pages.Notes.EditModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Note</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="bg-white shadow-lg rounded-lg p-8 w-full max-w-md">
        <h1 class="text-2xl font-bold text-gray-800 mb-4">Edit Note</h1>
        <form method="post">
            <div class="mb-4">
                <label class="block text-sm font-bold text-gray-700">Title</label>
                <input type="text" name="Note.Title" value="@Model.Note?.Title" 
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg">
            </div>
            <div class="mb-4">
                <label class="block text-sm font-bold text-gray-700">Content</label>
                <textarea name="Note.Content" 
                          class="w-full px-4 py-2 border border-gray-300 rounded-lg">@Model.Note?.Content</textarea>
            </div>
            <div class="mb-4">
                <label class="block text-sm font-bold text-gray-700">Category</label>
                <select name="Note.Category" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
                    <option value="Personal" selected="@(Model.Note?.Category == "Personal")">Personal</option>
                    <option value="Home" selected="@(Model.Note?.Category == "Home")">Home</option>
                    <option value="School" selected="@(Model.Note?.Category == "School")">School</option>
                    <option value="Business" selected="@(Model.Note?.Category == "Business")">Business</option>
                </select>
            </div>
            <div class="flex justify-between">
                <button type="submit" 
                        class="bg-blue-500 text-white px-4 py-2 rounded-lg shadow hover:bg-blue-600">
                    Save
                </button>
                <a href="/" class="bg-gray-300 text-gray-700 px-4 py-2 rounded-lg shadow hover:bg-gray-400">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</body>
</html>
